#Screen:

WindowManager:
    LoginWindow:
    CreateNewAccountWindow:


<LoginWindow>:
    name: "LoginWindow"
#########################################################################
######################## LOGIN PAGE #####################################
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 20
        pading: 25
        spacing: 15
        orientation: "vertical"

        MDLabel:
            id: welcome_label
            text: "PACEMAKER GUI"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: 60
        
        MDTextFieldRound:
            id: user
            hint_text: "Username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "Password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            #password: True

        MDRoundFlatButton:
            text: "CREATE NEW ACCOUNT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: 
                app.root.current = "CreateNewAccountWindow"
                root.manager.transition.direction = "left"

        MDRoundFlatButton:
            text: "LOGIN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.logData()

        Widget:
            size_hint_y: None
            height: 15

<CreateNewAccountWindow>:
    name: "CreateNewAccountWindow"
#########################################################################
######################## CREATE NEW ACCOUNT PAGE ########################
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 20
        pading: 25
        spacing: 15
        orientation: "vertical"

        MDLabel:
            id: user_profile
            text: "PROFILE"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        MDRoundFlatButton:
            text: "BACK"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: 
                app.root.current = "LoginWindow"
                root.manager.transition.direction = "right"
